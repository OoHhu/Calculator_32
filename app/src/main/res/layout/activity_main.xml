<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginVertical="0sp"
    >

    <TextView
        android:id="@+id/formula"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:autoSizeMaxTextSize="30sp"
        android:autoSizeMinTextSize="12sp"
        android:text=""
        android:textSize="30sp"
        android:gravity="right"
        android:autoSizeTextType="uniform"
        android:maxLines="1"
        />
    <TextView
        android:id="@+id/Answer"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:text="0"

        android:autoSizeMaxTextSize="50sp"
        android:autoSizeMinTextSize="20sp"
        android:layout_marginBottom="10dp"
        android:gravity="right"
        android:maxLength="14"
        android:autoSizeTextType="uniform"
        android:maxLines="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:iconPadding="0dp"
        android:weightSum="6">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_margin="0dp"
            android:layout_weight="1"
           android:weightSum="4">

            <Button
                android:id="@+id/ac"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="AC"
                android:textSize="30sp"
                android:onClick="AllClear_onClick"/>
            <Button
                android:id="@+id/bt_cl"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="C1"
                android:textSize="30dp"
                android:onClick="Clear1_onClick"/>
            <Button
                android:id="@+id/bt_c2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="C2"
                android:textSize="30dp"
                android:onClick="Clear2_onClick"/>

            <ImageButton
                android:id="@+id/bt_del1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="Del1_onClick"
                android:src="@drawable/ic_del_back_24"
                android:textSize="50dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"

            >
            <Button
                android:id="@+id/bt7"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:text="7"
                android:textSize="30dp"
                android:onClick="Number_onClick"/>
            <Button
                android:id="@+id/bt8"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:text="8"
                android:textSize="30dp"
                android:onClick="Number_onClick"/>
            <Button
                android:id="@+id/bt9"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:text="9"
                android:textSize="30dp"
                android:onClick="Number_onClick"/>

            <Button
                android:id="@+id/bt_divide"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:onClick="Symbol_onClick"
                android:text="รท"
                android:textSize="30dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"

            >
            <Button
                android:id="@+id/bt4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:text="4"
                android:textSize="30dp"
                android:onClick="Number_onClick"/>
            <Button
                android:id="@+id/bt5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:text="5"
                android:textSize="30dp"
                android:onClick="Number_onClick"/>
            <Button
                android:id="@+id/bt6"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:text="6"
                android:textSize="30dp"
                android:onClick="Number_onClick"/>
            <Button
                android:id="@+id/bt_times"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:text="ร"
                android:textSize="30dp"
                android:onClick="Symbol_onClick"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"

            >
            <Button
                android:id="@+id/bt1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:text="1"
                android:textSize="30dp"
                android:onClick="Number_onClick"/>
            <Button
                android:id="@+id/bt2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:text="2"
                android:textSize="30dp"
                android:onClick="Number_onClick"/>
            <Button
                android:id="@+id/bt3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:text="3"
                android:textSize="30dp"
                android:onClick="Number_onClick"/>
            <Button
                android:id="@+id/bt_minus"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:text="-"
                android:textSize="30dp"
                android:onClick="Symbol_onClick"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"

            android:weightSum="4">
            <Button
                android:id="@+id/bt0"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="0"
                android:textSize="30sp"
                android:onClick="Number_onClick"/>
            <Button
                android:id="@+id/_ans"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="ans"
                android:textSize="25sp"
                android:onClick="Ans_onClick"/>
            <Button
                android:id="@+id/bt_dtto"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="."
                android:textSize="30sp"
                android:onClick="Number_onClick"/>
            <Button
                android:id="@+id/bt_add"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="+"
                android:textSize="30sp"
                android:onClick="Symbol_onClick"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_equal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="="
                android:textSize="30dp"
                android:onClick="equal_onClick"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>